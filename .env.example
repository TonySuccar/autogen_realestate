# Application Settings
APP_NAME=Real Estate API
APP_VERSION=1.0.0
APP_DESCRIPTION=AI-powered Real Estate System
APP_ENV=development
DEBUG=True

# Database Configuration (REQUIRED)
# Replace with your PostgreSQL connection string
DATABASE_URL=postgresql://realestate_user:your_password@localhost:5432/realestate_db

# Database Pool Settings (Optional - defaults are set in settings.py)
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=3600
DB_ECHO=False

# CORS Settings (Allow AutoGen Studio and other frontends)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:8081,http://localhost:8081,http://localhost:8501

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=app.log

# OpenAI API (REQUIRED for AutoGen and embeddings)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL_NAME=gpt-4o-mini

# Phoenix Observability (OPTIONAL - for tracing agent activities)
# Option 1: Use Phoenix Cloud (free account at https://phoenix.arize.com/)
# PHOENIX_API_KEY=your_phoenix_api_key_here
# PHOENIX_COLLECTOR_ENDPOINT=https://app.phoenix.arize.com/v1/traces
# 
# Option 2: Use local Phoenix (no API key needed - RECOMMENDED)
# Run: python -m phoenix.server.main serve
# Then leave PHOENIX_API_KEY and PHOENIX_COLLECTOR_ENDPOINT empty
# Phoenix will be available at http://localhost:6006
PHOENIX_PROJECT_NAME=realestate-autogen
